@model AppVendas.Application.ViewModels.ProdutoViewModel

@{
    ViewBag.Title = "Remover Produto";
}

<h2>@ViewBag.Title</h2><br />

<h3>Você tem certeza que deseja remover este produto?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoriaId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Remover" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-primary">Voltar</a>
    </div>
    }
</div>
