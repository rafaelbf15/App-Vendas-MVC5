@model IEnumerable<AppVendas.Application.ViewModels.CategoriaViewModel>

@{
    ViewBag.Title = "Lista de Categorias";
}

<h2>@ViewBag.Title</h2><br />

<p>
    @Html.ActionLink("Adicionar categoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.Id })" class="btn btn-warning">Editar</a>
            <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-primary">Detalhes</a>
            <a href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-danger">Excluir</a>
        </td>
    </tr>
}

</table>
